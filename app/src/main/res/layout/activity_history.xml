<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.history.HistoryActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/llTop"
            android:weightSum="3">
            <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:background="@color/BackgroundHeaderGrid"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginRight="0.5dp"
                android:text="Ngày quét"
                android:gravity="center"/>

            <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:background="@color/BackgroundHeaderGrid"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginRight="0.5dp"
                android:text="Mã SP"
                android:gravity="center"/>

            <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:background="@color/BackgroundHeaderGrid"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginRight="0.5dp"
                android:text="Tên Sản Phẩm"
                android:gravity="center"/>

            <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:background="@color/BackgroundHeaderGrid"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginRight="0.5dp"
                android:text="ĐVT"
                android:gravity="center"/>

            <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:background="@color/BackgroundHeaderGrid"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginRight="0.5dp"
                android:text="Qui Cách"
                android:gravity="center"/>

            <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:background="@color/BackgroundHeaderGrid"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginRight="0.5dp"
                android:text="Khách hàng"
                android:gravity="center"/>
            <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:background="@color/BackgroundHeaderGrid"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginRight="0.5dp"
                android:text="Lần quét"
                android:gravity="center"/>
            <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                android:layout_width="650dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:background="@color/BackgroundHeaderGrid"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginRight="0.5dp"
                android:text="Vị trí quét"
                android:gravity="center"/>
            <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:background="@color/BackgroundHeaderGrid"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginRight="0.5dp"
                android:text="Hỗ trợ"
                android:gravity="center"/>
            <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:background="@color/BackgroundHeaderGrid"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginRight="0.5dp"
                android:text="Đồng bộ"
                android:gravity="center"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llBottom"
            android:layout_below="@+id/llTop">
        </android.support.v7.widget.RecyclerView>

       </RelativeLayout>


    </HorizontalScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnHisMenuList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        android:src="@drawable/ic_menu_list"
        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="@color/BackgroundButtonY"
        app:rippleColor="#FFF" />
</RelativeLayout>


