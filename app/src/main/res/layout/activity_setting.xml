<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/white"
        tools:context=".ui.setting.SettingFragment">

        <com.mimi.mimigroup.ui.custom.CustomBoldTextView
            android:id="@+id/tvRegisDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_ripple"
            android:drawableLeft="@drawable/tiva_setting_register"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="  Đăng ký"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/SettingMenuLine" />

        <com.mimi.mimigroup.ui.custom.CustomBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_ripple"
            android:drawableLeft="@drawable/tiva_setting_list"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="0dp"
            android:text="  Danh mục"
            android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/white"
                tools:context=".ui.setting.SettingFragment">

                <com.mimi.mimigroup.ui.custom.CustomTextView
                    android:id="@+id/tvCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_ripple"
                    android:drawableLeft="@drawable/tiva_list_nav"
                    android:clickable="true"
                    android:paddingStart="35dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="  Khách hàng"
                    android:textColor="@color/colorTextGray"
                    android:textSize="16sp" />

                <com.mimi.mimigroup.ui.custom.CustomTextView
                    android:id="@+id/tvProvince"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_ripple"
                    android:drawableLeft="@drawable/tiva_list_nav"
                    android:clickable="true"
                    android:paddingStart="35dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="  Địa phương"
                    android:textColor="@color/colorTextGray"
                    android:textSize="16sp" />

                <com.mimi.mimigroup.ui.custom.CustomTextView
                    android:id="@+id/tvProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_ripple"
                    android:drawableLeft="@drawable/tiva_list_nav"
                    android:clickable="true"
                    android:paddingStart="35dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="  Sản phẩm"
                    android:textColor="@color/colorTextGray"
                    android:textSize="16sp" />

                <com.mimi.mimigroup.ui.custom.CustomTextView
                    android:id="@+id/tvEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_ripple"
                    android:drawableLeft="@drawable/tiva_list_nav"
                    android:clickable="true"
                    android:paddingStart="35dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="  Nhân viên"
                    android:textColor="@color/colorTextGray"
                    android:visibility="gone"
                    android:textSize="16sp" />

                <com.mimi.mimigroup.ui.custom.CustomTextView
                    android:id="@+id/tvTree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_ripple"
                    android:drawableLeft="@drawable/tiva_list_nav"
                    android:clickable="true"
                    android:paddingStart="35dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="  Cây trồng - Dịch hại"
                    android:textColor="@color/colorTextGray"
                    android:textSize="16sp" />

                <com.mimi.mimigroup.ui.custom.CustomTextView
                    android:id="@+id/tvSeason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_ripple"
                    android:drawableLeft="@drawable/tiva_list_nav"
                    android:clickable="true"
                    android:paddingStart="35dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="  Mùa vụ"
                    android:textColor="@color/colorTextGray"
                    android:textSize="16sp" />

                <com.mimi.mimigroup.ui.custom.CustomTextView
                    android:id="@+id/tvTreeStages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item_ripple"
                    android:drawableLeft="@drawable/tiva_list_nav"
                    android:clickable="true"
                    android:paddingStart="35dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="  Giai đoạn cây trồng"
                    android:textColor="@color/colorTextGray"
                    android:textSize="16sp" />

                <com.mimi.mimigroup.ui.custom.CustomTextView
                    android:id="@+id/tvSyncAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingStart="30dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="  Đồng bộ tất cả"
                    android:textColor="@color/colorTextGray"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="17sp" />
            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/SettingMenuLine" />
        <com.mimi.mimigroup.ui.custom.CustomBoldTextView
            android:id="@+id/tvSystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_ripple"
            android:drawableLeft="@drawable/tiva_setting_config"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="  Thiết lập"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/SettingMenuLine" />



     <!--
        <com.mimi.tivasm.ui.custom.CustomBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ico_querry"
            android:clickable="true"
            android:paddingStart="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="  Tra cứu thông tin"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            tools:context=".ui.setting.SettingFragment">

            <com.mimi.tivasm.ui.custom.CustomTextView
                android:id="@+id/tvSearchScanning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableLeft="@drawable/icon_qrscan_his"
                android:paddingStart="45dp"
                android:paddingTop="0dp"
                android:paddingBottom="15dp"
                android:text="  Quét mã QR"
                android:textColor="@color/colorTextGray"
                android:textSize="17sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBorderGray" />
      -->


        <com.mimi.mimigroup.ui.custom.CustomBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_ripple"
            android:drawableLeft="@drawable/tiva_setting_help"
            android:clickable="true"
            android:id="@+id/tvHelp"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="  Trợ giúp"
            android:textSize="16sp" />

      <!--
        <com.mimi.tivasm.ui.custom.CustomTextView
            android:id="@+id/tvLicense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:paddingStart="45dp"
            android:paddingTop="30dp"
            android:paddingBottom="15dp"
            android:text="Phiên bản 3.0.6"
            android:textAlignment="center"
            android:textColor="@color/colorVersion"
            android:textSize="14sp" /> -->
    </LinearLayout>
</android.support.v7.widget.CardView>
