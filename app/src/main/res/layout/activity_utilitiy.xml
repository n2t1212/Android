<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/white"
        tools:context=".ui.utility.UtilityFragment">

        <com.mimi.mimigroup.ui.custom.CustomBoldTextView
            android:id="@+id/tvCustomerPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_ripple"
            android:drawableLeft="@drawable/tiva_setting_register"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="  Thu tiền đại lý"
            android:textColor="@color/textGreen"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/SettingMenuLine" />

        <com.mimi.mimigroup.ui.custom.CustomBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_ripple"
            android:drawableLeft="@drawable/tiva_setting_help"
            android:clickable="true"
            android:id="@+id/tvPlanSale"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="  Kế hoạch bán hàng"
            android:textColor="@color/textGreen"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/SettingMenuLine" />
        <com.mimi.mimigroup.ui.custom.CustomBoldTextView
            android:id="@+id/tvReportSale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_ripple"
            android:drawableLeft="@drawable/tiva_setting_config"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="  Báo cáo kinh doanh"
            android:textColor="@color/textGreen"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/SettingMenuLine" />

        <com.mimi.mimigroup.ui.custom.CustomBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_ripple"
            android:drawableLeft="@drawable/tiva_setting_help"
            android:clickable="true"
            android:id="@+id/tvReportTech"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="  Báo cáo kỹ thuật"
            android:textColor="@color/textGreen"
            android:textSize="18sp" />

    </LinearLayout>
</android.support.v7.widget.CardView>
