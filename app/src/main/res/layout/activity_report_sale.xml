<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.utility.ReportSaleRepActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/layout_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:elevation="10dp"
        android:translationZ="5dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/TooBarDP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:padding="10dp"
                    android:src="@drawable/ic_arrow_back" />

                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="BÁO CÁO KINH DOANH"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/layout_app_bar"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="horizontal"
                android:background="@color/BorderHeaderGrid"
                android:id="@+id/llTop">

                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/BackgroundHeaderGrid"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Số báo cáo"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/BackgroundHeaderGrid"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Tên báo cáo"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/BackgroundHeaderGrid"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Ngày lập"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/BackgroundHeaderGrid"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Kinh độ"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/BackgroundHeaderGrid"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Vĩ độ"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/BackgroundHeaderGrid"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Địa chỉ"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/BackgroundHeaderGrid"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Người nhận"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/BackgroundHeaderGrid"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Trạng thái"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/BackgroundHeaderGrid"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Đã gửi"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/BackgroundHeaderGrid"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Ngày gửi"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/BackgroundHeaderGrid"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Ghi chú"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>


            <!-- FILTER GRID-->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/llSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llTop"
                android:background="@color/BackgroundHeaderGrid"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.mimi.mimigroup.ui.custom.CustomEditText
                    android:id="@+id/filterReportCode"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/BackgroundFilterGrid"
                    android:hint=""
                    android:padding="5dp"
                    android:textColor="@color/BackgroundHeaderGrid"
                    android:textColorHint="@color/BorderHeaderGrid"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.mimi.mimigroup.ui.custom.CustomEditText
                    android:id="@+id/filterReportName"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0.5dp"
                    android:background="@color/BackgroundFilterGrid"
                    android:gravity="start"
                    android:hint=""
                    android:padding="5dp"
                    android:textColor="@color/BackgroundHeaderGrid"
                    android:textColorHint="@color/BorderHeaderGrid"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.mimi.mimigroup.ui.custom.CustomEditText
                    android:id="@+id/filterReportDate"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0.5dp"
                    android:background="@color/BackgroundFilterGrid"
                    android:enabled="false"
                    android:gravity="start"
                    android:hint=""
                    android:padding="5dp"
                    android:textColor="@color/BackgroundHeaderGrid"
                    android:textColorHint="@color/BorderHeaderGrid"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.mimi.mimigroup.ui.custom.CustomTextView
                    android:id="@+id/filterLongitude"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0.5dp"
                    android:background="@color/BackgroundFilterGrid"
                    android:enabled="false"
                    android:gravity="start"
                    android:hint=""
                    android:padding="5dp"
                    android:textColor="@color/BackgroundHeaderGrid"
                    android:textColorHint="@color/BorderHeaderGrid"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.mimi.mimigroup.ui.custom.CustomEditText
                    android:id="@+id/filterLatitude"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0.5dp"
                    android:background="@color/BackgroundFilterGrid"
                    android:gravity="start"
                    android:hint=""
                    android:padding="5dp"
                    android:textColor="@color/BackgroundHeaderGrid"
                    android:textColorHint="@color/BorderHeaderGrid"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.mimi.mimigroup.ui.custom.CustomEditText
                    android:id="@+id/filterLocationAddress"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0.5dp"
                    android:background="@color/BackgroundFilterGrid"
                    android:gravity="start"
                    android:hint=""
                    android:padding="5dp"
                    android:textColor="@color/BackgroundHeaderGrid"
                    android:textColorHint="@color/BorderHeaderGrid"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.mimi.mimigroup.ui.custom.CustomEditText
                    android:id="@+id/filterReceiverList"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0.5dp"
                    android:background="@color/BackgroundFilterGrid"
                    android:enabled="false"
                    android:gravity="start"
                    android:hint=""
                    android:padding="5dp"
                    android:textColor="@color/BackgroundHeaderGrid"
                    android:textColorHint="@color/BorderHeaderGrid"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.mimi.mimigroup.ui.custom.CustomEditText
                    android:id="@+id/filterNotes"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0.5dp"
                    android:background="@color/BackgroundFilterGrid"
                    android:enabled="false"
                    android:gravity="start"
                    android:hint=""
                    android:padding="5dp"
                    android:textColor="@color/BackgroundHeaderGrid"
                    android:textColorHint="@color/BorderHeaderGrid"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.mimi.mimigroup.ui.custom.CustomTextView
                    android:id="@+id/filterIsStatus"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0.5dp"
                    android:background="@color/BackgroundFilterGrid"
                    android:enabled="false"
                    android:gravity="start"
                    android:hint=""
                    android:padding="5dp"
                    android:textColor="@color/BackgroundHeaderGrid"
                    android:textColorHint="@color/BorderHeaderGrid"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.mimi.mimigroup.ui.custom.CustomEditText
                    android:id="@+id/filterIsPost"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0.5dp"
                    android:background="@color/BackgroundFilterGrid"
                    android:enabled="false"
                    android:gravity="start"
                    android:hint=""
                    android:padding="5dp"
                    android:textColor="@color/BackgroundHeaderGrid"
                    android:textColorHint="@color/BorderHeaderGrid"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.mimi.mimigroup.ui.custom.CustomEditText
                    android:id="@+id/filterPostDay"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0.5dp"
                    android:background="@color/BackgroundFilterGrid"
                    android:enabled="false"
                    android:gravity="start"
                    android:hint=""
                    android:padding="5dp"
                    android:textColor="@color/BackgroundHeaderGrid"
                    android:textColorHint="@color/BorderHeaderGrid"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvReportSaleRepList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/llBottom"
                android:layout_below="@+id/llSearch"
                android:layout_marginTop="-1dp"></android.support.v7.widget.RecyclerView>

        </RelativeLayout>


    </HorizontalScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnReportSaleRepMenuList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        android:src="@drawable/ic_menu_list"
        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="@color/ColorButtonGreen"
        app:rippleColor="#FFF" />
</RelativeLayout>


