<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:orientation="vertical">

    <HorizontalScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:id="@+id/llTop">
                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@color/HeaderGridOrderDetail"
                    android:textColor="@color/TextHeaderGrid"
                    android:textSize="16sp"
                    android:layout_marginRight="0.5dp"
                    android:text="Tiêu đề"
                    android:gravity="center"/>
                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:background="@color/HeaderGridOrderDetail"
                    android:textColor="@color/TextHeaderGrid"
                    android:textSize="16sp"
                    android:layout_marginRight="0.5dp"
                    android:text="Ghi chú"
                    android:gravity="center"/>
                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:background="@color/HeaderGridOrderDetail"
                    android:textColor="@color/TextHeaderGrid"
                    android:textSize="16sp"
                    android:layout_marginRight="0.5dp"
                    android:text="Useful"
                    android:gravity="center"/>
                <com.mimi.mimigroup.ui.custom.CustomBoldTextView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:background="@color/HeaderGridOrderDetail"
                    android:textColor="@color/TextHeaderGrid"
                    android:textSize="16sp"
                    android:layout_marginRight="0.5dp"
                    android:text="Harmful"
                    android:gravity="center"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rvReportTechMarketList"
                android:layout_below="@+id/llTop"></android.support.v7.widget.RecyclerView>


        </RelativeLayout>
    </HorizontalScrollView>



</LinearLayout>
